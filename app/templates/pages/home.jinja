{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>Task List</h1>

    <article>

        <ul>
            {% for task in tasks %}
                <li>
                    <p><a href="/thing/{{ task.id }}">
                        {{ task.name }}
                    </a></p>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

{% endblock %}

